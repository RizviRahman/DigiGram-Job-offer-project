    <div class="container" style="margin-top: 120px;">
        <a type="button" class="btn btn-primary" href="/admin-path/add-job">Add Job</a>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Job Title</th>
                <th scope="col">Location</th>
                <th scope="col">Status</th>
                <th scope="col">Description</th>
                <th scope="col">actions</th>
              </tr>
            </thead>
            <tbody>
            <% jobs.forEach(function(job) { %>
              <tr>
                <th scope="row">1</th>
                <td><%= job.title%></td>
                <td><%= job.location%></td>
                <td><%= job.status%></td>
                <td><%- job.description %></td>
                <td>
                    <form action="/admin-path/<%= job._id %>" method="PUT"><button type="submit" class="btn btn-warning">Edit</button> </form>
                    <form action="/admin-path/<%= job._id %>" method="delete"><button type="submit" class="btn btn-danger">Delete</button> </form>
                </td>
              </tr>
              <% }) %>
